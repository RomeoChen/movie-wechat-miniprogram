/* miniprogram/pages/commentEdit/commentEdit.wxss */
Page {
    background: #f6f6f6;
}
.whole-wrap {
    padding: 100rpx 0rpx;
}
.card {
    margin: 0rpx 40rpx;
    border: 1rpx solid #d6d6d6;
    background-color: white;
    padding: 40rpx 50rpx;
    height: 1000rpx;
}

.image-title-description {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    top: -100rpx;
}
image {
    width: 250rpx;
    height: 350rpx;
}
.title {
    font-weight: bold;
    padding-top: 20rpx;
    padding-bottom: 50rpx;
}
.button-group {
    display: flex;
    justify-content: space-between;
}
button {
    font-size: 25rpx;
    width: 200rpx;
    background-color: white;
}

.confirm-comment {
    position: fixed;
    bottom: 0rpx;
    text-align: center;
    width: 100%;
    line-height: 100rpx;
    background-color: rgb(4, 177, 4);
    border-top: 1rpx #d3d3d3;
    color: white;
}

.record {
    padding-bottom: 20rpx;
}